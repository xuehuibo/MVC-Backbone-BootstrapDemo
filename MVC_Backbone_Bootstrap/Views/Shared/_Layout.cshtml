<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/underscore")
        @Scripts.Render("~/bundles/backbone")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/tool")
        @Styles.Render("~/bundles/css")
    </head>
    <body background="~/Content/images/Background.jpg">
        @RenderSection("Template",false)@*此处为Html模板*@
        @RenderSection("JS",true)@*在此处进行类型声明及对象初始化*@
        <div class="navbar navbar-inverse navbar-fixed-top">
            @*页眉*@
                
            <div class="navbar-header">  
                <a class="navbar-brand" href="/">
                    <div class="row">
                        <div class="col-xs-6"><img src="~/Content/images/logo.png" class="img-responsive" /></div>
                        <div class="col-xs-6"><h2>百货开票系统</h2></div>
                    </div></a>
                
            </div>
        </div>
        <div id="body" class="container" style="padding-top:100px ;padding-bottom:50px">
            @RenderBody()@*页面主体*@
        </div>
        <div class="navbar navbar-inverse navbar-fixed-bottom" >
            @*页脚*@
            <div class="navbar-header">                             
                <a class="navbar-brand hidden-sm" href="/">&nbsp;&nbsp;&nbsp;2014青岛海信智能商用版权所有</a>               
            </div>
        </div>            
    </body>
</html>
