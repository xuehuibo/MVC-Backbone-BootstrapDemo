<div class="panel-body">
    <div class="row">
        <div class="col-xs-4 col-xs-offset-1">
            <h4 class="text-primary">@ViewBag.Invoice_Title</h4>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-xs-2 col-xs-offset-1">
            <h5>专柜：</h5>
        </div>
        <div class="col-xs-3 ">
            <h5 class="text-info">@ViewBag.ShopCode - @ViewBag.ShopName</h5>
        </div>
        <div class="col-xs-2">
            <h5>营业员：</h5>
        </div>
        <div class="col-xs-3">
            <h5 class="text-info">@ViewBag.UserCode - @ViewBag.UserName</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-2 col-xs-offset-1">
            <h5>会员卡：</h5>
        </div>
        <div class="col-xs-3">
            <h5 class="text-info">123124-张三</h5>
        </div>
        <div class="col-xs-2">
            <h5>总金额：</h5>
        </div>
        <div class="col-xs-3">
            <h4 class="text-danger">￥1000</h4>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-xs-8 col-xs-offset-1">
            <p class="text-muted">@ViewBag.Invoice_Remark</p>
        </div>
        <div class="col-xs-2">
            <a class="btn btn-default">&nbsp;开&nbsp;票&nbsp;</a>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-xs-5 col-xs-offset-1">
            <h2 class="text-warning">开票成功！</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <ul class="list-group">
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-xs-5 col-xs-offset-1">
                            <h5>流水号：<span  class="text-info">12345678901234</span></h5>
                        </div>
                        <div class="col-xs-3 col-xs-offset-2">
                            <a class="btn btn-default">&nbsp;短&nbsp;信&nbsp;</a>
                            <a class="btn btn-default">&nbsp;打&nbsp;印&nbsp;</a>
                        </div>
                    </div>
                </li>
                <li class="list-group-item media">
                    <div class="row">
                        <img class="media-object col-xs-2 col-xs-offset-1" src="../Content/images/barcode1v.jpg"/>
                        <div class="col-xs-3 col-xs-offset-5">
                            <a class="btn btn-default">&nbsp;发&nbsp;送&nbsp;</a>
                            <a class="btn btn-default">&nbsp;打&nbsp;印&nbsp;</a>
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <img  class="media-object col-xs-2 col-xs-offset-1" src="../Content/images/barcode2v.jpg"/>
                        <div class="col-xs-3 col-xs-offset-5">
                            <a class="btn btn-default">&nbsp;发&nbsp;送&nbsp;</a>
                            <a class="btn btn-default">&nbsp;打&nbsp;印&nbsp;</a>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>